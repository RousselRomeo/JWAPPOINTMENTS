
<%-include("partials/header"); %>


<main>


<div class="container-fluid">
  <div class="row">
    <div class="col-sm-5 col-md-10 col-lg-12">
      <header>
        <h1 style="margin-top: 30px"></h1>
      </header>
      <form action="/addAppointment" method="post">
        <div class="form-group">
          <input
            id="email"
            class="form-control"
            name="time"
            value="8:50 - 10:50"
            required
            minlength="5"
            maxlength="50"
            placeholder="username"
            hidden
          />
        </div>
        <button class="btn-success btn-sm">Ajouter</button>
      </form>
      <button class="btn-info btn-sm" onclick="">Vendredi 8:50 - 10:50</button>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Nom</th>
            <th>Heure</th>
          </tr>
        </thead>
        <tbody id="clearTable1">
    
          <% var num=1 %> <% foundUsers.forEach(function(foundUser){ %>
           
          <%if(foundUser.table1){%>
          <tr  onclick="deleteAppoinment(this)">
            <td class="rank"><%- num++ %></td>

            <td class="team"><%- foundUser.name%></td>
            
            <td class="points">
              <%- foundUser.time %> <button class="btn-primary btn-sm">supprimer</button>
            </td>
            <td class="rank" hidden><%-foundUser.id %></td>
          </tr>
          <%}%>
          
          
         
          
          
          <%})%>
    
          
        </tbody>
      </table>
      <div style=" margin-top:90px" ></div>

      <form action="/addAppointment2" method="post">
        <div class="form-group">
          <input
            id="email"
            class="form-control"
            name="time"
            value="11:50 - 12:50"
            required
            minlength="5"
            maxlength="50"
            placeholder="username"
            hidden
          />
        </div>
        <button class="btn-success btn-sm">Ajouter</button>
      </form>
      
      
      <button class="btn-info btn-sm" onclick="">Samedi 11.50 - 13:50</button>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Nom</th>
            <th>Heure</th>
          </tr>
        </thead>
        <tbody>
          <% var num=1 %> <% foundUsers.forEach(function(foundUser){ %>
          <%if(foundUser.table2){%>
          <tr onclick="deleteAppoinment(this)">
            <td class="rank"><%= num++ %></td>

            <td class="team"><%= foundUser.name%></td>

            <td class="points">
              <%= foundUser.time %> <button class="btn-primary btn-sm">supprimer</button>
            </td>
            <td class="rank" hidden><%=foundUser.id %></td>
          </tr>
          <%}%> <%})%>
        </tbody>
      </table>
    </div>
  </div>
</div>

</main>

<%-include("partials/footer"); -%>
